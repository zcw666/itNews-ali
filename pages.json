{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/tabBar/index/index",
			"style": {
				"transparentTitle": "always",
				"navigationStyle": "custom", //取消默认导航栏
				"navigationBarTitleText": ""
			}
		},
		{
			"path": "pages/tabBar/me/me",
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		},
		{
			"path": "pages/tabBar/follow/follow",
			"style": {
				"navigationBarTitleText": "关注"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#3cc51f",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/tabBar/index/index",
			"iconPath": "static/images/home.png",
			"selectedIconPath": "static/images/home-active.png",
			"text": "首页"
		}, {
			"pagePath": "pages/tabBar/follow/follow",
			"iconPath": "static/images/follow.png",
			"selectedIconPath": "static/images/follow-active.png",
			"text": "关注"
		}, {
			"pagePath": "pages/tabBar/me/me",
			"iconPath": "static/images/my.png",
			"selectedIconPath": "static/images/my-active.png",
			"text": "我的"
		}]
	}
}
